<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

<div class="box">

    <h1 id="logintoregister">Sign Up</h1>

    <div class="group show">
      <%= f.text_field :email, required: true, class: 'inputMaterial' %>
      <span class="highlight"></span>
      <span class="bar"></span>
      <label>Email</label>
    </div>

    <div class="group show">
      <%= f.password_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), class: 'inputMaterial' %>
      <span class="highlight"></span>
      <span class="bar"></span>
      <label>Password</label>
    </div>

    <div class="group show">
      <%= f.password_field :password, required: true, class: 'inputMaterial' %>
      <span class="highlight"></span>
      <span class="bar"></span>
      <label>Password Confirmation</label>
    </div>



    <%= f.button :submit, "Sign up", :id => 'buttonlogintoregister' %>


      <!-- <p id="plogintoregister">Non sei iscritto? </p>
      <p id="textchange" onclick="register()"> Registrati</p> -->

</div>
<% end %>
