<div class="row">
  <h1>Dashboard</h1>
  <div class="col-md-4">
    <h3>Books <%= link_to 'New Booke', new_book_path, class: 'btn btn-default btn-sm'%></h3>
    <table class="table table-condensed">
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Price</th>
          <th>Availability</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.id %></td>
          <td><%= link_to book.name, book_path(book) %></td>
          <td><%= book.price %></td>
          <td><%= book.availability %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-4">
    <h3>My Purchased</h3>
  </div>
  <div class="col-md-4">
    <h3>Sales</h3>
  </div>
</div>
